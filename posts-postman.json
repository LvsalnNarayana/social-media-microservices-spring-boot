{
  "info": {
    "_postman_id": "post-service-api-2025-11-19",
    "name": "Post Service API - Social Media Backend",
    "description": "Comprehensive collection for testing PostControllerImpl endpoints. Mirrors IPostApi spec with example payloads from PostRequestModel/PostResponseModel. Set env vars: baseUrl, postId, authorId, userId.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "console.log('Pre-flight: Testing ' + pm.info.requestName + ' at ' + new Date().toISOString());"
        ],
        "type": "text/javascript"
      }
    },
    {
      "listen": "test",
      "script": {
        "exec": [
          "pm.test('Status code matches expected', () => {",
          "    pm.response.to.have.status(200); // Adjust per endpoint",
          "});",
          "pm.test('MasterResponse structure', () => {",
          "    const jsonData = pm.response.json();",
          "    pm.expect(jsonData).to.have.property('status');",
          "    pm.expect(jsonData).to.have.property('data');",
          "});",
          "console.log('Response time: ' + pm.response.responseTime + 'ms');"
        ],
        "type": "text/javascript"
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    }
